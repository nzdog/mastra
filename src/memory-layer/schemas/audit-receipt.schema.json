{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lichen-protocol.org/schemas/audit-receipt.json",
  "title": "SignedAuditReceipt",
  "description": "Schema for signed audit receipts with Merkle proof (Phase 1.1)",
  "type": "object",
  "required": [
    "event",
    "merkle",
    "signature",
    "ledger_height",
    "receipt_id"
  ],
  "properties": {
    "event": {
      "$ref": "audit-event.json",
      "description": "The audit event being receipted"
    },
    "merkle": {
      "type": "object",
      "required": ["leaf_hash", "root_hash", "proof", "index"],
      "properties": {
        "leaf_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 hash of the event (64 hex characters)"
        },
        "root_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "Merkle root hash at time of append"
        },
        "proof": {
          "type": "object",
          "required": ["leaf", "siblings", "path", "root"],
          "properties": {
            "leaf": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$"
            },
            "siblings": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[a-f0-9]{64}$"
              }
            },
            "path": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["left", "right"]
              }
            },
            "root": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$"
            }
          }
        },
        "index": {
          "type": "integer",
          "minimum": 0,
          "description": "Position in Merkle tree (0-indexed)"
        }
      }
    },
    "signature": {
      "type": "object",
      "required": ["signature", "algorithm", "alg", "keyId", "timestamp"],
      "properties": {
        "signature": {
          "type": "string",
          "description": "Base64-encoded signature"
        },
        "algorithm": {
          "type": "string",
          "enum": ["Ed25519", "RSA-PSS"],
          "description": "Cryptographic algorithm used"
        },
        "alg": {
          "type": "string",
          "enum": ["EdDSA", "PS256"],
          "description": "JOSE algorithm identifier"
        },
        "keyId": {
          "type": "string",
          "pattern": "^key_[0-9]+_[a-f0-9]+$",
          "description": "Key identifier (kid)"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Signature timestamp (ISO 8601)"
        }
      }
    },
    "ledger_height": {
      "type": "integer",
      "minimum": 1,
      "description": "Ledger height at time of append (1-indexed)"
    },
    "receipt_id": {
      "type": "string",
      "pattern": "^rcpt_[0-9]+_[0-9]+_[a-z0-9]+$",
      "description": "Unique receipt identifier (format: rcpt_<timestamp>_<index>_<event_id_prefix>)"
    }
  },
  "additionalProperties": false
}
