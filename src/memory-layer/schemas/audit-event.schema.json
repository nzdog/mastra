{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lichen-protocol.org/schemas/audit-event.json",
  "title": "AuditEvent",
  "description": "Schema for audit events in the Memory Layer ledger (Phase 1.1)",
  "type": "object",
  "required": [
    "event_id",
    "timestamp",
    "event_type",
    "operation",
    "payload",
    "schemaVersion",
    "policyVersion",
    "consentScope"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "pattern": "^evt_[0-9]+_[a-z0-9]+$",
      "description": "Unique event identifier (format: evt_<timestamp>_<random>)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp (e.g., 2025-10-16T01:07:58.191Z)"
    },
    "event_type": {
      "type": "string",
      "enum": [
        "STORE",
        "RECALL",
        "DISTILL",
        "FORGET",
        "EXPORT",
        "HEALTH",
        "CONSENT_GRANT",
        "CONSENT_REVOKE",
        "AMBIGUITY_EVENT",
        "GOVERNANCE_OVERRIDE",
        "ETHICAL_DEVIATION"
      ],
      "description": "Type of audit event"
    },
    "operation": {
      "type": "string",
      "minLength": 1,
      "description": "Operation being audited (e.g., 'health_check', 'store_memory')"
    },
    "hashed_pseudonym": {
      "type": "string",
      "description": "Pseudonymized user identifier (optional)"
    },
    "session_id": {
      "type": "string",
      "description": "Session identifier (optional)"
    },
    "payload": {
      "type": "object",
      "description": "Event-specific data payload"
    },
    "consent_context": {
      "type": "object",
      "properties": {
        "consent_level": {
          "type": "string",
          "enum": ["personal", "cohort", "population"]
        },
        "scope": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "expiry": {
          "type": "string",
          "format": "date-time"
        },
        "revocable": {
          "type": "boolean"
        }
      },
      "required": ["consent_level", "scope", "revocable"]
    },
    "schemaVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Schema version (semantic versioning, e.g., '1.1.0')"
    },
    "policyVersion": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}$",
      "description": "Policy version (YYYY-MM format, e.g., '2025-01')"
    },
    "consentScope": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Consent scope tags (e.g., ['personal', 'audit'])"
    }
  },
  "additionalProperties": false
}
